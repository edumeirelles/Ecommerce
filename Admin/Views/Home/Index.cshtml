@model DAL.ViewModels.ProductViewModel

<div class="container">
    <div class="row">
        <form class="col-12" asp-action="Index">

            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name"/>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Stock"></label>
                <input class="form-control" asp-for="Stock" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="FullDescription"></label>
                <input class="form-control" asp-for="FullDescription" />
            </div>

            <input type="submit" value="Criar Produto" class="btn btn-primary" />
        </form>
    </div>
   
</div>
